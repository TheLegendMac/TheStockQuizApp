<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/scroll_view_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:orientation="vertical"
        tools:context=".StartActivity">

        <RelativeLayout
            android:id="@+id/titleBar"
            style="@style/captureTitleBar"
            android:background="@drawable/white_gradient">

            <TextView
                android:id="@+id/captureTitle"
                style="@style/activityTitleText"
                android:text="@string/splashAppTitle" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@drawable/shadow" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                style="@style/card_style"
                ads:cardBackgroundColor="@android:color/white"
                ads:cardUseCompatPadding="true"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp"
                app:contentPadding="35dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/question_one_text"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20sp" />

                    <RadioGroup
                        android:id="@+id/rgOne"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp">

                        <RadioButton
                            android:id="@+id/rbOne"
                            style="@style/radioBtnStyle"
                            android:text="@string/group_one_answer_one" />

                        <RadioButton
                            android:id="@+id/rbTwo"
                            style="@style/radioBtnStyle"
                            android:text="@string/group_one_answer_two" />

                        <RadioButton
                            android:id="@+id/rbThree"
                            style="@style/radioBtnStyle"
                            android:text="@string/group_one_answer_three" />
                    </RadioGroup>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                style="@style/card_style"
                ads:cardBackgroundColor="@android:color/white"
                ads:cardUseCompatPadding="true"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp"
                app:contentPadding="35dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/question_two_text"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20sp" />

                    <RadioGroup
                        android:id="@+id/rgTwo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp">

                        <RadioButton
                            android:id="@+id/rgTwoRbOne"
                            style="@style/radioBtnStyle"
                            android:text="@string/group_two_answer_one" />

                        <RadioButton
                            android:id="@+id/rgTwoRbTwo"
                            style="@style/radioBtnStyle"
                            android:text="@string/group_two_answer_two" />

                        <RadioButton
                            android:id="@+id/rgTwoRbThree"
                            style="@style/radioBtnStyle"
                            android:text="@string/group_two_answer_three" />
                    </RadioGroup>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                style="@style/card_style"
                ads:cardBackgroundColor="@android:color/white"
                ads:cardUseCompatPadding="true"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp"
                app:contentPadding="35dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/question_three_text"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20sp" />

                    <RadioGroup
                        android:id="@+id/rgThree"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp">

                        <RadioButton
                            android:id="@+id/rgThreeRbOne"
                            style="@style/radioBtnStyle"
                            android:text="@string/group_three_answer_one" />

                        <RadioButton
                            android:id="@+id/rgThreeRbTwo"
                            style="@style/radioBtnStyle"
                            android:text="@string/group_three_answer_two" />

                        <RadioButton
                            android:id="@+id/rgThreeRbThree"
                            style="@style/radioBtnStyle"
                            android:text="@string/group_three_answer_three" />
                    </RadioGroup>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                style="@style/card_style"
                ads:cardBackgroundColor="@android:color/white"
                ads:cardUseCompatPadding="true"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp"
                app:contentPadding="35dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/question_four_text"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20sp" />

                    <RadioGroup
                        android:id="@+id/rgFour"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp">

                        <RadioButton
                            android:id="@+id/rgFourRbOne"
                            style="@style/radioBtnStyle"
                            android:text="@string/group_four_answer_one" />

                        <RadioButton
                            android:id="@+id/rgFourRbTwo"
                            style="@style/radioBtnStyle"
                            android:text="@string/group_four_answer_two" />

                        <RadioButton
                            android:id="@+id/rgFourRbThree"
                            style="@style/radioBtnStyle"
                            android:text="@string/group_four_answer_three" />
                    </RadioGroup>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                style="@style/card_style"
                ads:cardBackgroundColor="@android:color/white"
                ads:cardUseCompatPadding="true"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp"
                app:contentPadding="35dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/question_five_text"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20sp" />

                    <RadioGroup
                        android:id="@+id/rgFive"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp">

                        <RadioButton
                            android:id="@+id/rgFiveRbOne"
                            style="@style/radioBtnStyle"
                            android:text="@string/group_five_answer_one" />

                        <RadioButton
                            android:id="@+id/rgFiveRbTwo"
                            style="@style/radioBtnStyle"
                            android:text="@string/group_five_answer_two" />

                        <RadioButton
                            android:id="@+id/rgFiveRbThree"
                            style="@style/radioBtnStyle"
                            android:text="@string/group_five_answer_three" />
                    </RadioGroup>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                style="@style/card_style"
                ads:cardBackgroundColor="@android:color/white"
                ads:cardUseCompatPadding="true"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp"
                app:contentPadding="35dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/question_six_text"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20sp" />

                    <CheckBox
                        android:id="@+id/chk_one"
                        style="@style/radioBtnStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/checkbox_one_answer" />

                    <CheckBox
                        android:id="@+id/chk_two"
                        style="@style/radioBtnStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/checkbox_two_answer" />

                    <CheckBox
                        android:id="@+id/chk_three"
                        style="@style/radioBtnStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/checkbox_three_answer" />

                    <CheckBox
                        android:id="@+id/chk_four"
                        style="@style/radioBtnStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:text="@string/checkbox_four_answer" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@drawable/shadow" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:padding="15dp">

                <Button
                    android:id="@+id/submit_button"
                    style="@style/squareButton"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="right"
                    android:layout_marginBottom="35dp"
                    android:background="@drawable/hellobutton"
                    android:text="@string/doneBtn"
                    android:textCursorDrawable="@color/bgGrey" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>